{
  "version": "0.2.0",
  
  "configurations": [
    {
      "name": "[üçÉ]chainlit",
      "type": "python",
      "request": "launch",
      "module": "chainlit",
      "args": [
        "run",
        "${workspaceFolder}/app.py",
        "-w"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "console": "internalConsole",
    },
    {
      "name": "Python debugger: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "purpose": [
        "debug-test"
      ],
      "console": "internalConsole",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python Debugger: Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}"
    },    

  ]
}